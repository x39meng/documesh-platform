{
  "name": "@repo/database",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "generate": "drizzle-kit generate",
    "db:push": "dotenv -e ../../apps/web/.env -- drizzle-kit push",
    "db:studio": "dotenv -e ../../apps/web/.env -- drizzle-kit studio",
    "db:reset": "dotenv -e ../../apps/web/.env -- bun scripts/reset-db.ts",
    "db:seed": "dotenv -e ../../apps/web/.env -- bun scripts/seed-security.ts",
    "db:seed-user": "dotenv -e ../../apps/web/.env -- bun scripts/seed-user.ts",
    "lint": "tsc --noEmit && eslint . --ext .ts"
  },
  "dependencies": {
    "@repo/config": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "postgres": "^3.4.7",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "bun-types": "^1.3.3",
    "drizzle-kit": "^0.31.0",
    "typescript": "^5.0.0"
  }
}
