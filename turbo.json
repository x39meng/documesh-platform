{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",

  "globalEnv": ["NODE_ENV", "CI", "SKIP_ENV_VALIDATION", "npm_lifecycle_event"],

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NEXT_PUBLIC_APP_URL", "NEXT_PUBLIC_API_URL"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "db:push": {
      "cache": false,
      "interactive": true
    },

    "lint": {},
    "typecheck": {},
    "test": {}
  },

  "globalDependencies": ["**/.env.*local", "**/.env"]
}
